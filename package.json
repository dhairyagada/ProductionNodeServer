{
  "name": "productionserver",
  "version": "1.0.0",
  "description": "A Production Ready Server",
  "main": "./build/index.js",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "start": "ts-node index.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "author": "Dhairya Gada",
  "license": "ISC",
  "dependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.3",
    "@types/fs-extra": "^8.1.0",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "@types/winston": "^2.4.4",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^9.0.0",
    "lodash": "^4.17.19",
    "mocha": "^7.1.1",
    "module-alias": "^2.2.2",
    "sinon": "^9.0.2",
    "winston": "^3.2.1"
  },
  "_moduleAliases": {
    "@root": ".",
    "@src": "build/src",
    "@utils": "build/src/utils",
    "@configs": "build/configs"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "chai": "^4.2.0",
    "nyc": "^15.0.1",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
